<UserControl x:Class="Quiz.Controls.VerbConjugationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Quiz.Controls"
             mc:Ignorable="d" 
             >
    <StackPanel Width="200">
        <Label Content="{Binding name}" FontSize="18"/>
        <controls:TextEntry x:Name="io" Title="io" ExpectedValue="{Binding io}"  Margin="5"/>
        <controls:TextEntry Title="tu" ExpectedValue="{Binding tu}"  Margin="5"/>
        <controls:TextEntry Title="lui" ExpectedValue="{Binding lui}"  Margin="5"/>
        <controls:TextEntry Title="noi" ExpectedValue="{Binding noi}"  Margin="5"/>
        <controls:TextEntry Title="voi" ExpectedValue="{Binding voi}"  Margin="5"/>
        <controls:TextEntry Title="loro" ExpectedValue="{Binding loro}"  Margin="5"/>
    </StackPanel>
</UserControl>
