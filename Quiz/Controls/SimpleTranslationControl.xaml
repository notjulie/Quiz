<UserControl x:Class="Quiz.Controls.SimpleTranslationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Quiz.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Width="200">
        <StackPanel Orientation="Horizontal">
            <Label Content="English: "/>
            <Label Content="{Binding English}"/>
        </StackPanel>
        <controls:TextEntry x:Name="textEntry" Title="Italian" ExpectedValue="{Binding Italian}"  Margin="5"/>
    </StackPanel>
</UserControl>
